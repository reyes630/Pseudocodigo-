Proceso Ejercicio_15
	//Pedir el lado de un cuadrado, mostrar su área y su perímetro.
	//DEFINIR VARIABLES 
	Definir Lado, Area, Perimetro como Real;
	//ENTRADA DE DATOS 
	Escribir "Ingresar el lado del cuadrado ";
	Leer Lado;
	//OPERACIONES 
	Area <- Lado * Lado; 
	Perimetro <- Lado * 4;
	//SALIDA 
	Escribir "El area del cuadrado es: ", Area;
	Escribir "El permietro es: ", Perimetro;
FinProceso
